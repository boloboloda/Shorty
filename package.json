{
  "name": "Shorty",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy --minify",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:setup": "node scripts/db-setup.js setup",
    "db:migrate:local": "node scripts/db-setup.js local",
    "db:migrate:remote": "node scripts/db-setup.js remote",
    "db:create": "wrangler d1 create shorty-db",
    "db:create:prod": "wrangler d1 create shorty-db-prod",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "npm run type-check",
    "preview": "wrangler dev --local",
    "start": "npm run dev"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "hono": "^4.7.11",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.4.0"
  }
}
